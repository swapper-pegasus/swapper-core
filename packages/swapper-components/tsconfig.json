{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@swapper-org/swapper-elements": ["../swapper-elements"],
      "@swapper-org/swapper-wallets": ["../swapper-wallets"]
    }
  },
  "references": [
    {
      "path": "../swapper-elements"
    },
    {
      "path": "../swapper-wallets"
    }
  ],
  "include": ["./src"],
  "exclude": [
    "packages/*/node_modules", 
    "packages/*/lib",
    "packages/*/coverage",
    "packages/*/dist",
    "packages/*/*.spec.ts",
    "packages/*/*.test.ts"
  ],
}